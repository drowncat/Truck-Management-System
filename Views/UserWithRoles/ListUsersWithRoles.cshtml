@model List<TMS_APP.Models.DTO.UserWithRolesViewModel>

@{
    ViewData["Title"] = "ListUsersWithRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Users With Roles</h1>


<table>
    <thead>
        <tr>
            @*<th>User ID</th>*@
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                @*<td>@user.UserId</td>*@
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.User.Status</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@user.UserId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@user.UserId">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

